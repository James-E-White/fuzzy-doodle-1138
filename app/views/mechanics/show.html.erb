<h1>Mechanic Name:<%= @mechanic.name %></h1>
<p>Years of Experience: <%= @mechanic.years_of_experience %></p>

<p>Rides working on:<li></p><% @mechanic.rides.each do |ride| %>
    <p><%= ride.name %></li>
    

<% end %>

<h2>Add a Ride to workload</h2>
<%= form_with url: "/mechanics/#{@mechanic.id}", local: true do |f| %>
  <%= f.label "Ride Id" %>
  <%= f.text_field :ride %>
  <%= f.submit "Submit" %>
<% end %>